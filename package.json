{
  "name": "nullab-design-system",
  "version": "0.1.2",
  "description": "A comprehensive design system with React components and Tailwind CSS integration",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "tailwind.config.js",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tailwind": "./tailwind.config.js",
    "./styles": "./dist/styles.css"
  },
  "scripts": {
    "build": "tsup && npm run build:css",
    "build:css": "tailwindcss -i ./src/styles/global.css -o ./dist/styles.css --minify",
    "dev": "vite",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "design-system",
    "react",
    "tailwindcss",
    "components",
    "ui"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/nullab-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/nullab-design-system/issues"
  },
  "homepage": "https://github.com/your-username/nullab-design-system#readme",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.0"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.8",
    "lucide-react": "^0.542.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.3",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^5.0.8"
  }
}
